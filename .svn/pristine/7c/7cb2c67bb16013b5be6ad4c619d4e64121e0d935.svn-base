<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- <pattern>%date %thread %-5level %logger %X{ip} %msg %n</pattern> -->
            <pattern>%date{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 按照每天生成SQL日志文件 -->
    <appender name="SQL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/storeba/sql.log</file>
        <Encoding>UTF-8</Encoding>
        <!--  -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${catalina.home}/logs/store-log/sql%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </layout>
    </appender>
    
    <!-- 应用日志 -->
    <appender name="APPSTORE" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/storeba/storeba.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%logger.%M:%L] |%msg%n</pattern>
        </encoder>
        <charset>UTF-8</charset>
    </appender>
    
    <!-- 下载排行定时任务 -->
    <appender name="DOWNLOADRANK" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/storeba/job.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%logger.%M:%L] |%msg%n</pattern>
        </encoder>
        <charset>UTF-8</charset>
    </appender>

    <appender name="RecommandDownloadRankJob" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/storeba/recommandDownloadRankJob.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/log/storeba/recommandDownloadRankJob.log-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>45</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
        <charset>UTF-8</charset>
    </appender>

    <logger name="recommand" level="INFO" >
        <appender-ref ref="RecommandDownloadRankJob"/>
    </logger>

    <!-- 需要记录日志的包 -->
    <logger name="com.qbao" level="DEBUG" >
       <appender-ref ref="APPSTORE"/>
    </logger>
    <!-- 定时任务 -->
    <logger name="com.qbao.store.job" level="INFO" >
       <appender-ref ref="DOWNLOADRANK"/>
    </logger>
    
    <!-- 开发环境显示日志. -->
    <logger name="sqlLog" level="ERROR" >
         <appender-ref ref="SQL" />
    </logger>
    <!--
                  以下用于真实环境显示SQL日志,这个sqlLog跟mybatis-config.xml里面的logPrefix相对应;
                  其中additivity=false表示不像上级输入,如果不配置这个,则root以及自己都会打印sql.
    
    <logger name="sqlLog" level="DEBUG" additivity="false">
        <appender-ref ref="SQL" />
    </logger>-->
    <logger name="ch.qos.logback" level="ERROR" />
    <logger name="org.springframework" level="ERROR" />
    <logger name="com.github.miemiedev" level="ERROR" />
    <logger name="net.sf.ehcache" level="ERROR" />
    <logger name="org.apache.commons" level="ERROR" />
    <logger name="freemarker" level="ERROR" />

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>